@model Patient

<h2>Patient</h2>



<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <label class="form-label mt-4 text-primary" style="font-weight:600" asp-for="Name"></label>
        <div class="col-sm-10">
            <input class="form-control btn-outline-dark bg-light" asp-for="Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="row">
        <label class="form-label mt-4 text-primary" style="font-weight:600" asp-for="Age"></label>
        <div class="col-sm-10">
            <input class="form-control btn-outline-dark bg-light" asp-for="Age">
            <span class="text-danger" asp-validation-for="Age"></span>
        </div>
    </div>

    <div class="row">
        <label class="form-label mt-4 text-primary" style="font-weight:600" asp-for="Gender"></label>
        <div class="col-sm-10">
            <input class="form-control btn-outline-dark bg-light" asp-for="Gender">
            <span class="text-danger" asp-validation-for="Gender"></span>
        </div>
    </div>

    <div class="row">
        <label class="form-label mt-4 text-primary" style="font-weight:600" asp-for="BloodGroup"></label>
        <div class="col-sm-10">
            <input class="form-control btn-outline-dark bg-light" asp-for="BloodGroup">
            <span class="text-danger" asp-validation-for="BloodGroup"></span>
        </div>
    </div>

    <div class="row">
        <label class="form-label mt-4 text-primary" style="font-weight:600" asp-for="Phone"></label>
        <div class="col-sm-10">
            <input class="form-control btn-outline-dark bg-light" asp-for="Phone">
            <span class="text-danger" asp-validation-for="Phone"></span>
        </div>
    </div>

    <div class="row">
        <label class="form-label mt-4 text-primary" style="font-weight:600" asp-for="EmergencyContact"></label>
        <div class="col-sm-10">
            <input class="form-control btn-outline-dark bg-light" asp-for="EmergencyContact">
            <span class="text-danger" asp-validation-for="EmergencyContact"></span>
        </div>
    </div>

    <div class="row">
        <label class="form-label mt-4 text-primary" style="font-weight:600" asp-for="Address"></label>
        <div class="col-sm-10">
            <input class="form-control btn-outline-dark bg-light"  asp-for="Address">
            <span class="text-danger" asp-validation-for="Address"></span>
        </div>
    </div>

    <div class="row w-25 mt-2">
        <div class="col-6">
            <button type="submit" class="btn btn-warning" style="width:100px"> Update </button>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" style="width:130px" asp-area="Admin" asp-controller="Patient" asp-action="Index">Back to List</a>
        </div>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}