@model List<Patient>
<br />
<br />
<div class="row">
    <div class="col-6">
        <h2> Patients </h2>
    </div>
    <div class="col-6">
        <a class="btn btn-primary text-end mb-3 " style="margin-left:320px ; margin-top:5px" asp-area="Admin" asp-controller="Patient" asp-action="Create">
            Add a Patient
        </a>
    </div>
</div>
<br />

<table id="patienttable" class=" table table-hover">
    <thead>
        <tr class="table-primary">
            <th>Name</th>
            <th>Age</th>
            <th>Blood Group</th>
            <th>Gender</th>
            <th>Contact No</th>
            <th> Emergency Number</th>
            <th>Adress</th>
            

        </tr>
    </thead>
 
</table>


@section Scripts {
    <script src="~/js/Patient.js"></script>
}
