@{
    ViewData["Title"] = "Home Page";
}
<br />
<br />


<!-- Hero Section -->
<div class="container-fluid p-0">
    <div class="row g-0">
        <div class="col-12">
            <div class="position-relative">
                <img src="~/images/hero1.jpg" class="img-fluid w-100" alt="Hospital" style="max-height: 500px; object-fit: cover;">
                <div class="position-absolute top-50  translate-middle-y text-start text-white" style="margin-left:20px">
                    <h1 class="display-4 fw-bold">Welcome to Our Hospital</h1>
                    <p class="lead text-black">Healthcare You Deserve</p>
                    <a asp-area="User" asp-controller="Appointment" asp-action="Book" class="btn btn-primary btn-lg me-2">Book Appointment</a>
                    <a asp-area="Admin" asp-controller="Doctors" asp-action="Index" class="btn btn-dark btn-lg">Our Doctors</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Info Cards -->
<div class="container my-5">
    <div class="row text-center">
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-hospital fs-1 text-primary mb-3"></i>
                    <h5 class="card-title">Modern Facilities</h5>
                    <p class="card-text">State-of-the-art medical equipment and comfortable patient rooms.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-people fs-1 text-success mb-3"></i>
                    <h5 class="card-title">Expert Doctors</h5>
                    <p class="card-text">Experienced specialists dedicated to your health and wellbeing.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-clock fs-1 text-info mb-3"></i>
                    <h5 class="card-title">24/7 Emergency</h5>
                    <p class="card-text">Round-the-clock emergency services for urgent medical care.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- About Section with Images -->
<div class="container my-5">
    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <img src="~/images/about.jpg" class="img-fluid rounded shadow" alt="About Hospital">
        </div>
        <div class="col-md-6">
            <h2 class="mb-3">About Our Hospital</h2>
            <p>We are committed to providing exceptional healthcare services with compassion and expertise. Our team of dedicated professionals works tirelessly to ensure the best outcomes for our patients.</p>
            <p>With modern facilities and advanced medical technology, we offer comprehensive care across multiple specialties.</p>
            <a asp-area="Admin" asp-controller="Department" asp-action="Index" class="btn btn-primary">View Departments</a>
        </div>
    </div>

    <div class="row align-items-center">
        <div class="col-md-6 order-md-2">
            <img src="~/images/about2.jpg" class="img-fluid rounded shadow" alt="Our Services">
        </div>
        <div class="col-md-6 order-md-1">
            <h2 class="mb-3">Our Services</h2>
            <ul class="list-unstyled">
                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>General Medicine</li>
                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Emergency Care</li>
                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Specialized Treatments</li>
                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Preventive Health Checkups</li>
            </ul>
            <a asp-area="Admin" asp-controller="Patient" asp-action="Create" class="btn btn-primary">Register as Patient</a>
        </div>
    </div>
</div>


<div class="bg-primary text-white py-5 my-5">
    <div class="container text-center">
        <h3 class="mb-3">Need Medical Assistance?</h3>
        <p class="lead mb-4">Our team is ready to help you with your healthcare needs.</p>
        <a asp-area="User" asp-controller="Appointment" asp-action="Book" class="btn btn-light btn-lg">Book Your Appointment Now</a>
    </div>
</div>